{
  "name": "synapse",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "concurrently \"pnpm run dev:js\" \"pnpm run dev:py\"",
    "dev:js": "turbo run dev --filter=!ml-service",
    "dev:py": "pnpm --filter ml-service run dev",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "mongoose": "^8.18.0"
  }
}
